{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*", "tests"],
  "exclude": [
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.js",
    "node_modules"
  ]
}
